enum Level {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

input QuestionAnswerInput {
  id: ID! @id
  questionId: Int
  answerId: Int
}

type Question {
  id: ID! @id
  level: Level! @default(value: BEGINNER)
  title: String! @unique
  code: String!
  answers: [Answer!]! @relation(link: TABLE)
}

type Answer {
  id: ID! @id
  text: String!
  isCorrect: Boolean! @default(value: false)
}

type Result {
  id: ID! @id
  dateTime: DateTime!
  question: Question! @relation(link: TABLE)
  answer: Answer! @relation(link: TABLE)
}

type User {
  id: ID! @id
  email: String!
  password: String!
  results: [Result!]! @relation(link: TABLE)
}